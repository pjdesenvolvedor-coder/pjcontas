rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User Data
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId); // On signup
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();

      // User's own purchases
      match /userSubscriptions/{subscriptionId} {
        allow read, create, update, delete: if isOwner(userId);
      }
    }

    // Public & Semi-Public Data
    
    // Subscriptions (Plans/Announcements)
    match /subscriptions/{subscriptionId} {
        allow get, list: if true; // Anyone can see plans
        // Seller who owns the plan or admin can write
        allow create: if isSignedIn() && request.resource.data.sellerId == request.auth.uid;
        allow update: if isSignedIn() && (resource.data.sellerId == request.auth.uid || isAdmin());
        allow delete: if isSignedIn() && (resource.data.sellerId == request.auth.uid || isAdmin());

        // Deliverables for a subscription
        match /deliverables/{deliverableId} {
          // Seller can manage everything.
          allow read, write: if isSignedIn() && get(/databases/$(database)/documents/subscriptions/$(subscriptionId)).data.sellerId == request.auth.uid;
          // Buyer can update status from 'available' to 'sold' upon purchase.
          allow update: if isSignedIn() && 
            resource.data.status == 'available' &&
            request.resource.data.status == 'sold' &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
        }
     }
     
    // Tickets for buyer/seller communication
    match /tickets/{ticketId} {
        allow get, update: if isSignedIn() && (request.auth.uid == resource.data.customerId || request.auth.uid == resource.data.sellerId);
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.customerId;
        allow list: if isSignedIn(); // Client-side queries must enforce userId == customerId or sellerId

        match /messages/{messageId} {
            allow read, create: if isSignedIn() && (request.auth.uid == get(/databases/$(database)/documents/tickets/$(ticketId)).data.customerId || request.auth.uid == get(/databases/$(database)/documents/tickets/$(ticketId)).data.sellerId);
            allow update, delete: if false; // Messages are append-only
        }
    }

    // App configurations
    match /configs/{configId} {
      allow get, list: if true; // Publicly readable
      allow write: if isAdmin(); // Only admin can change configs
    }
    
    // Discount coupons
    match /coupons/{couponId} {
        allow get, list: if true; // Publicly readable
        // Admin manages coupons
        allow create, delete: if isAdmin();
        // Admin can update. Users can only increment usageCount.
        allow update: if isAdmin() || 
          (
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['usageCount']) && 
            request.resource.data.usageCount == resource.data.usageCount + 1
          );
    }

    // WhatsApp message queue
    match /pending_whatsapp_messages/{messageId} {
        allow create: if isSignedIn(); // Users can queue messages
        // Processed by a backend/admin daemon. Deny client access to prevent snooping or tampering.
        allow read, update, delete: if false; 
    }
    
    // Lock down legacy collections that are no longer in use.
    match /streaming_services/{serviceId} { allow read, write: if false; }
    match /subscription_plans/{planId} { allow read, write: if false; }
    match /payments/{paymentId} { allow read, write: if false; }
  }
}
