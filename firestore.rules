/**
 * Core Philosophy: This ruleset enforces a multi-role marketplace model (admin, seller, customer).
 * It grants permissions based on a user's role and their ownership of documents.
 *
 * Data Structure:
 * - /users/{userId}: Stores all user profiles. A user's role is defined here.
 * - /services/{serviceId}: A public catalog of streaming service providers, managed by admins.
 * - /subscriptions/{subscriptionId}: All available subscription plans (products). These are created
 *   and managed by sellers.
 * - /users/{userId}/userSubscriptions/{userSubscriptionId}: A customer's purchase history. This
 *   is private to each customer.
 * - /tickets/{ticketId}: Support tickets/chats between a customer and a seller for a purchase.
 *
 * Key Security Decisions:
 * - Role-Based Access: A user's capabilities (creating products, modifying users) are
 *   determined by the 'role' field in their user document.
 * - Seller Ownership: Sellers can only create, update, or delete subscriptions where the
 *   subscription's `sellerId` matches their own UID.
 * - Admin Privileges: Admins have elevated access to manage user roles and the `/services` catalog.
 * - Public Readability: The product catalog (`/subscriptions`) and service list (`/services`) are
 *   publicly readable to allow all users to browse the marketplace.
 * - Strict Data-Privacy: A user's subscription history, personal profile, and support tickets
 *   are private and can only be accessed by the involved parties.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions for authentication and authorization checks.

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isSeller() {
      let userRole = get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
      return isSignedIn() && (userRole == 'seller' || userRole == 'admin');
    }

    function hasValidUserDataForCreate(userId) {
      return request.resource.data.id == userId;
    }

    function isUserDataImmutable() {
      return request.resource.data.id == resource.data.id;
    }

    function hasValidUserSubscriptionDataForCreate(userId) {
      return request.resource.data.userId == userId;
    }

    function isUserSubscriptionDataImmutable() {
      return request.resource.data.userId == resource.data.userId;
    }

    function isTicketParticipant(ticketId) {
      let ticket = get(/databases/$(database)/documents/tickets/$(ticketId)).data;
      return isSignedIn() && (request.auth.uid == ticket.customerId || request.auth.uid == ticket.sellerId);
    }

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Disallow listing all users to protect privacy.
      allow create: if isOwner(userId) && hasValidUserDataForCreate(userId);
      // A user can update their own data (but not their role). An admin can update any user document.
      allow update: if (isOwner(userId) && isUserDataImmutable() && request.resource.data.role == resource.data.role) || isAdmin();
      allow delete: if isExistingOwner(userId);

      match /userSubscriptions/{userSubscriptionId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && hasValidUserSubscriptionDataForCreate(userId);
        allow update: if isExistingOwner(userId) && isUserSubscriptionDataImmutable();
        allow delete: if isExistingOwner(userId);
      }
    }
    
    match /services/{serviceId} {
      allow get: if true;
      allow list: if true;
      // Services catalog is managed by admins only.
      allow write: if isAdmin();
    }

    match /subscriptions/{subscriptionId} {
      allow get: if true;
      allow list: if true;
      // Sellers can create subscriptions and must set themselves as the seller.
      allow create: if isSeller() && request.resource.data.sellerId == request.auth.uid;
      // Only the seller who owns the subscription can update or delete it.
      allow update: if isSeller() && get(/databases/$(database)/documents/subscriptions/$(subscriptionId)).data.sellerId == request.auth.uid;
      allow delete: if isSeller() && get(/databases/$(database)/documents/subscriptions/$(subscriptionId)).data.sellerId == request.auth.uid;

      match /deliverables/{deliverableId} {
        function isSubscriptionOwner() {
          return get(/databases/$(database)/documents/subscriptions/$(subscriptionId)).data.sellerId == request.auth.uid;
        }

        allow list, get: if isSeller() && isSubscriptionOwner();
        // When creating, sellerId and subscriptionId must be correct, status must be 'available'.
        allow create: if isSeller() && isSubscriptionOwner()
                      && request.resource.data.sellerId == request.auth.uid
                      && request.resource.data.subscriptionId == subscriptionId
                      && request.resource.data.status == 'available';
        // Allow owner to delete, or update (e.g., to change status to 'sold')
        allow update, delete: if isSeller() && isSubscriptionOwner();
      }
    }

    match /tickets/{ticketId} {
      allow get: if isTicketParticipant(ticketId);
      // Users can only query for tickets where they are a customer or seller.
      allow list: if isSignedIn() && (request.query.get('customerId') == request.auth.uid || request.query.get('sellerId') == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.customerId == request.auth.uid;
      allow update: if isTicketParticipant(ticketId); // For updating last message, status etc.
      allow delete: if false; // Do not allow tickets to be deleted.

      match /messages/{messageId} {
        allow get, list: if isTicketParticipant(ticketId);
        // Participants can create messages, and senderId must be their own.
        allow create: if isTicketParticipant(ticketId) && request.resource.data.senderId == request.auth.uid;
        allow update, delete: if false; // Disallow editing/deleting messages for integrity.
      }
    }
  }
}
