rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole() {
      // It's better to check for existence before accessing .data
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    function isSeller() {
      return isSignedIn() && getRole() == 'seller';
    }
    
    function isSellerOrAdmin() {
        return isSeller() || isAdmin();
    }
    
    function isCreatingOwnSellerResource() {
        return isSignedIn() && request.resource.data.sellerId == request.auth.uid;
    }
    
    function isUpdatingOwnSellerResource() {
        return isSignedIn() && resource.data.sellerId == request.auth.uid;
    }

    // -------------------------------------------------------------------------
    // Collections
    // -------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /users/{userId}/userSubscriptions/{purchaseId} {
        allow read, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if false; // Immutable from client-side
    }

    match /subscriptions/{subscriptionId} {
      allow get, list: if true;
      allow create: if isSellerOrAdmin() && isCreatingOwnSellerResource();
      allow update: if (isSellerOrAdmin() && isUpdatingOwnSellerResource()) || isAdmin();
      allow delete: if (isSellerOrAdmin() && isUpdatingOwnSellerResource()) || isAdmin();
    }
    
    match /subscriptions/{subscriptionId}/deliverables/{deliverableId} {
        allow read, list, create, delete: if isSellerOrAdmin() && (get(/databases/$(database)/documents/subscriptions/$(subscriptionId)).data.sellerId == request.auth.uid);
        allow update: if false;
    }

    match /tickets/{ticketId} {
        allow get: if isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.sellerId == request.auth.uid);
        allow list: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.customerId == request.auth.uid;
        allow update: if isSignedIn() && (resource.data.customerId == request.auth.uid || resource.data.sellerId == request.auth.uid);
        allow delete: if false;
    }
    
    match /tickets/{ticketId}/messages/{messageId} {
        allow get, list: if isSignedIn() && (get(/databases/$(database)/documents/tickets/$(ticketId)).data.customerId == request.auth.uid || get(/databases/$(database)/documents/tickets/$(ticketId)).data.sellerId == request.auth.uid);
        allow create: if isSignedIn() && (request.resource.data.senderId == request.auth.uid || request.resource.data.senderId == 'system');
        allow update, delete: if false;
    }
    
    match /configs/{configId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /coupons/{couponId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /pending_whatsapp_messages/{messageId} {
        allow create: if isSignedIn();
        allow read, list, update, delete: if isAdmin();
    }
  }
}
