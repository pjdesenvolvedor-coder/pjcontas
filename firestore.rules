rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Coleções com permissão de leitura pública para que visitantes possam ver os anúncios.
    // A escrita continua a exigir autenticação.
    match /subscriptions/{subscriptionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /configs/{configId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /coupons/{couponId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Para todas as outras coleções, o acesso de leitura e escrita
    // continua a exigir que o utilizador esteja autenticado.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
