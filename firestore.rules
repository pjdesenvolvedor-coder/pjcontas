rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ATENÇÃO: Estas regras são permissivas e destinam-se a fins de desenvolvimento.
    // Elas permitem que qualquer usuário autenticado leia e escreva em todo o banco de dados.
    // Para uma aplicação em produção, você deve implementar regras de segurança mais granulares
    // para proteger os dados do usuário.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
