rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ATENÇÃO: Regras completamente abertas para depuração.
    // Isso permite que qualquer pessoa leia e escreva em todos os documentos.
    // A segurança adequada DEVE ser restaurada antes da produção.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
